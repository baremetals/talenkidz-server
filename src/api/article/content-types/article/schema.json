{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "body": {
      "type": "richtext",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "SEO": {
      "type": "component",
      "repeatable": false,
      "component": "seo.seo"
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::author.author"
    },
    "blurb": {
      "type": "text"
    },
    "readingTime": {
      "type": "string"
    },
    "totalLikes": {
      "type": "integer",
      "default": 0
    },
    "totalComments": {
      "type": "integer",
      "default": 0
    },
    "firebaseId": {
      "type": "string"
    },
    "likes": {
      "displayName": "likes",
      "type": "component",
      "repeatable": true,
      "component": "likes.likes"
    }
  }
}
